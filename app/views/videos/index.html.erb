<h1>Videos</h1>
<table>
  <tr>
    <th>Name</th>
    <th>Beschreibung</th>
    <th>Besitzer</th>
  </tr>

<% @videos.each do |video| %>
  <% @user = User.find_by_id(video.user_id) %>
  <tr>
    <td><%= link_to video.name, video %></td>
    <td><%= video.description %></td>
    <td><%= link_to @user.name, @user%></td>
  </tr>
<% end %>
</table>
